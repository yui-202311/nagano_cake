<div class="container mt-2">
  <div class="row">
    <div class="col-md-12">
      <h3>【注文履歴一覧】</h3>

      <table border="1" cellpadding="5">
        <thead>
          <tr>
            <td class="table-secondary">注文日</td>
            <td class="table-secondary">配送先</td>
            <td class="table-secondary">注文商品</td>
            <td class="table-secondary">支払金額</td>
            <td class="table-secondary">ステータス</td>
            <td class="table-secondary">注文詳細</td>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>

                  〒<%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
              </td>
              <td>
                  <% order.order_details.each do |order_detail| %>
                    <div><%= order_detail.item.name %></div>
                  <% end %>
              </td>
              <td><%= order.payment_amount.to_s(:delimited) %>円</td>
              <td><%= %></td>
              <td><%= link_to "表示する", public_order_path(order), class: 'btn btn-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
