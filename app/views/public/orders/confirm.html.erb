<h4>注文情報確認</h4>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <td class="table-secondary">商品名</td>
      <td class="table-secondary">単価（税込）</td>
      <td class="table-secondary">数量</td>
      <td class="table-secondary">小計</td>
    </tr>
  </thead>
  <%= form_with model: @order, url: public_orders_complete_path, do |f| %>
    <% @cart_items.each do |cart_item| %>
      <% @total += cart_item.subtotal %>
  <tbody>
    <tr>
      <td>
        <%= image_tag cart_item.item.image, size: "150x100" %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

  <table border="1" cellpadding="5">
    <tr>
      <td class="table-secondary">送料</td>
          <% @order.postage = 800 %>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td class="table-secondary">商品合計</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
    <tr>
      <td class="table-secondary">請求金額</td>
      <% total_payment = @order.postage + @total %>
      <td><%= total_payment.to_s(:delimited) %></td>
    </tr>

<table>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method_i18n %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td><%= @order.full_address %></td>
  </tr>
</table>
<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :postage %>
  <%= f.hidden_field :total_payment %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postal_code %>
  <%#= f.hidden_field :status %>
<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>