<div class="container mt-2">
  <div class="row">
    <div class="col-md-8">
      <h3>【注文情報確認】</h3>
        <table border="1" cellpadding="5" style="width:100%">
          <thead>
            <tr>
              <td class="table-secondary" style="width:65%">商品名</td>
              <td class="table-secondary" style="width:15%">単価（税込）</td>
              <td class="table-secondary" style="width:10%">数量</td>
              <td class="table-secondary" style="width:10%">小計</td>
            </tr>
          </thead>
            <% @cart_items.each do |cart_item| %>
              <% @total += cart_item.subtotal %>
          <tbody>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: "100x80" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>

  
    <div class="col-md-10"></div>
    <div class="col-md-2">
      <table border="1" style="width:100%">
        <tr>
          <td class="table-secondary" style="width:50%">送料</td>
              <% @order.postage = 800 %>
          <td style="width:50%"><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="table-secondary">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-secondary">請求金額</td>
          <% total_payment = @order.postage + @total %>
          <td><%= total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    </div>
  

    <div class="col-md-12">
      <table>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td><%= @order.full_address %></td>
        </tr>
      </table>
      <%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :postage %>
        <%= f.hidden_field :payment_amount, :value => total_payment.to_i %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :status %>
        <div class="container mt-5">
          <div class="row">
            <div class="mx-auto">
              <%= f.submit "注文を確定する", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>