<div class="container">

<h4>【注文情報入力】</h4>

<h5 class="font-weight-bold">支払方法</h5>

<%= form_with model: @order, url: public_orders_confirm_path do |f| %>
  <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: "checked" %>
  <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %><br>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

<h5 class="font-weight-bold">お届け先</h5>

    <%= f.radio_button :address_type, 0, checked: "checked" %>
    <%= f.label :current_customer_address, "ご自身の住所" %><br>
  <div class="col-3">
    <div>
      〒<%= current_customer.postal_code %>
    <div>
    </div>
      <%= current_customer.address %>
    </div>
    <div>
      <%= current_customer.last_name %><%= current_customer.first_name %>
    </div>
  </div>
      <%= f.radio_button :address_type, 1 %>
      <%= f.label :registered_address, "登録済み住所から選択" %>
    <div>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
    </div>
      <%= f.radio_button :address_type, 2 %>
      <%= f.label :new_customer_address, "新しいお届け先" %>


  <table>
    <tr>
      <td>
        <span class="bg-info"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></span><br>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
      </td>
    </tr>
    <tr>
      <td>
        <span class="bg-info"><%= f.label :address, "住所" %></span><br>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", size: "50x10" %>
      </td>
    </tr>
    <tr>
      <td>
        <span class="bg-info"><%= f.label :name, "宛名" %></span><br>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.text_field :name, autofocus: true, placeholder: "令和道子" %></div>
      </td>
    </tr>
  </table>

<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% end %>
