<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tr>
    <td><%= f.label :name %></td>
    <td>
      (<%= f.label :last_name %>）
      <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"令和" %>
      （<%= f.label :first_name %>）
      <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"道子" %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :name_kana %></td>
    <td>
      (<%= f.label :last_name_kana %>)
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"レイワ" %>
      (<%= f.label :first_name_kana %>)
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"ミチコ" %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder:"sample@example.com" %></td>
  </tr>

  <tr>
    <td><%= f.label :postal_code %>（ハイフンなし）</td>
    <td><%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %></td>
  </tr>

  <tr>
    <td><%= f.label :address %></td>
    <td><%= f.text_field :address, autofocus: true,  placeholder:"東京都渋谷区代々木神園町0-0", size: "50x10" %></td>
  </tr>

  <tr>
    <td><%= f.label :telephone_number %>（ハイフンなし）</td>
    <td><%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"09012345678" %></td>
  </tr>

  <tr>
    <td><%= f.label :password %>
        <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>
</table>


  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-sm btn-success' %>
  </div>
<% end %>

<%= render "public/shared/links" %>



