<div class="container">
      <h3>新規登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="row">
  <div class="col-md-3">
    <div class="form-group">
      <div class="field">
        <span class="bg-info"><%= f.label :name %></span><br>
        (<%= f.label :last_name %>)<br>
        <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"令和" %><br>
        (<%= f.label :first_name %>)<br>
        <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"道子" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <span class="bg-info"><%= f.label :name_kana %></span><br>
        (<%= f.label :last_name_kana %>)<br>
        <%= f.text_field :last_name_kana, autofocus: true, id:"inputName", placeholder:"レイワ" %><br>
        (<%= f.label :first_name_kana %>)<br>
        <%= f.text_field :first_name_kana, autofocus: true, id:"inputName", placeholder:"ミチコ" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <span class="mb-2 bg-info"><%= f.label :email %></span><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder:"sample@example.com" %>
      </div>
    </div>
    </div>

  <div class="col-md-4">
    <div class="form-group">
      <div class="field">
        <span class="mb-2 bg-info"><%= f.label :postal_code %>（ハイフンなし）</span><br>
        <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <span class="mb-2 bg-info"><%= f.label :address %></span><br>
        <%= f.text_field :address, autofocus: true,  placeholder:"東京都渋谷区代々木神園町0-0", size: "50x10" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <span class="mb-2 bg-info"><%= f.label :telephone_number %>（ハイフンなし）</span><br>
        <%= f.text_field :telephone_number, autofocus: true, id:"inputName", placeholder:"09012345678" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <span class="mb-2 bg-info">
          <%= f.label :password %>
            <% if @minimum_password_length %>
        <em>
          (<%= @minimum_password_length %> 文字以上)
        </em></span><br>
            <% end %>
       <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <span class="mb-2 bg-info"><%= f.label :password_confirmation %></span><br>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

      <div class="actions">
        <%= f.submit "登録", class: 'btn btn-success' %>
      </div>
<% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>




