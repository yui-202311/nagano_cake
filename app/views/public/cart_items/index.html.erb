<h4>ショッピングカート
<%= link_to "カートを空にする", public_items_path, class: 'btn  btn-sm btn-danger' %>
</h4>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%#= cart_item.amount %>
        <%= f.hidden_field :item_id, :value => cart_item.amount %>
        <%= f.select :amount, *[1..3] %>
        <%= f.submit "変更", class: 'btn btn-success', method: :patch %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <%= @total += cart_item.subtotal %>
      <td>
        <%= f.submit "削除する", class: 'btn btn-danger', method: :delete %>
      </td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <table border="1" cellpadding="5">
              <tr>
                <td>合計金額</td>
                <td><%#= @cart_items.subtotal %></td>
                  <%#= @total += @cart_item.subtotal %>
              </tr>
            </table>
