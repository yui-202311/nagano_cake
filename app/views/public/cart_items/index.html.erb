<h4>ショッピングカート
<%= link_to "カートを空にする", public_cart_items_destroy_all_path, class: 'btn btn-sm btn-danger', method: :delete %>
</h4>

<table border="1" cellpadding="5">
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価（税込）</td>
      <td>数量</td>
      <td>小計</td>
      <td></td>
    </tr>
  </thead>


  <tbody>
    <% @cart_items.each do |cart_item| %>
      <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :patch do |f| %>
        <% @total += cart_item.subtotal %>

        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: "150x100" %>
            <% end %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= f.select :amount, *[1..5], value: cart_item.amount %>
            <%= f.submit "変更", class: 'btn btn-success', method: :patch %>
          </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td>
            <%= link_to "削除する", public_cart_item_path(cart_item), class: 'btn btn-danger', method: :delete %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <table border="1" cellpadding="5">
              <tr>
                <td>合計金額</td>
                <td><%= @total.to_s(:delimited) %></td>
              </tr>
            </table>
            <%= link_to "情報入力に進む", new_public_order_path, class: 'btn btn-success' %>
          </div>
        </div>
      </div>

