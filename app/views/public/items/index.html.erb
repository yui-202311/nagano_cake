<div class="container px-5 px-sm-0">
    <div class="row">
        <h2>商品一覧</h2>
        <h4>(全<%= @total_item %>件)</h4>
    </div>

    <div class="d-flex justify-center flex-wrap">
    <% @items.each do |item| %>
        <div class="m-3">
        <% if item.image.attached? %>
            <div>
            <%= link_to public_item_path(item) do %>
                <%= image_tag item.image, size: "200x150" %>
            <% end %>
            </div>
        <% else %>
            <div>
            <%= link_to public_item_path(item) do %>
                <%= image_tag 'no_image', size: "200x150" %>
            <% end %>
            </div>
        <% end %>
            <div><%= item.name %> </div>
            <div>¥<%= item.price.to_s(:delimited) %> </div>
        </div>
        <% end %>
    </div>
    <%= paginate @items %>
</div>





