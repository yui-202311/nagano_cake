<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
        <% if @item.image.attached? %>
            <div>
                <%= image_tag @item.image, size: "250x200" %>
            </div>
        <% else %>
            <div>
                <%= image_tag 'no_image', size: "250x200" %>
            </div>
        <% end %>
        </div>
        <div class="col-md-9">
            <h4 class="font-weight-bold"><%= @item.name %></h4>
            <h5><%= @item.introduction %></h5>
            <h5>¥<%= (@item.price*1.1).floor.to_s(:delimited) %>(税込)</h5>

    <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
        <div class="font-weight-bold">数量を選択してください</div>
            <%= f.hidden_field :item_id, :value => @item.id %>
        <div class="mt-3">
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "カートに入れる", class: 'btn btn-success' %>
        </div>
    <% end %>
        </div>
    </div>
</div>


