<h3>マイページ</h3>

<table>
  <tbody>
    <tr>
    <th>登録情報</th>
    <td><%= link_to "編集する", customer_session_path, class: 'btn btn-sm btn-success' %></td>
    </tr>
  </tbody>
</table>

<table class="table">
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
    <th>配送先</th>
    <td><%= link_to "一覧を見る", orders_path, class: 'btn btn-sm btn-primary' %></td>
    </tr>
    <tr>
    <th>注文履歴</th>
    <td><%= link_to "一覧を見る", orders_path, class: 'btn btn-sm btn-primary' %></td>
    </tr>
  </tbody>
</table>