<div class="container">
<h3>【マイページ】  </h3>

<table>
  <tbody>
    <tr>
    <th class="px-2">登録情報</th>
    <td><%= link_to "編集する", public_customers_information_edit_path, class: 'btn btn-sm btn-success' %></td>
    </tr>
  </tbody>
</table>

<table border="1" cellpadding="5" class="mt-3">
  <tbody>
    <tr>
      <td>氏名</td>
      <td width="80%"><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<table class="mt-3">
  <tbody>
    <tr>
    <th class="px-2">配送先</th>
    <td><%= link_to "一覧を見る", public_addresses_path, class: 'btn btn-sm btn-primary' %></td>
    </tr>
    <tr>
    <th class="px-2">注文履歴</th>
    <td><%= link_to "一覧を見る", public_orders_path, class: 'btn btn-sm btn-primary' %></td>
    </tr>
  </tbody>
</table>
</div>