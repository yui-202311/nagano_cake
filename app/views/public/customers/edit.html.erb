<div class="container">
<h3>【会員情報編集】</h3>

<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @customer, url: public_customers_information_path do |f| %>

<table style="width:80%">
  <tr>
    <td style="width:20%">名前</td>
    <td style="width:60%">
      <%= f.text_field :last_name, autofocus: true, id:"inputName" %>
      <%= f.text_field :first_name, autofocus: true, id:"inputName" %>
    </td>
  </tr>

  <tr>
    <td>フリガナ</td>
    <td>
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputName" %>
    </td>
  </tr>

  <tr>
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>

  <tr>
    <td><%= f.label :郵便番号 %>(ハイフンなし)</td>
    <td><%= f.text_field :postal_code, autofocus: true %></td>
  </tr>

  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address, autofocus: true, size: "50x10" %></td>
  </tr>
  <tr>
    <td><%= f.label :電話番号 %>（ハイフンなし）</td>
    <td><%= f.text_field :telephone_number, autofocus: true, id:"inputName" %></td>
  </tr>
</table>

<div class="mt-3">
  <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
  <%= link_to "退会する", public_customers_withdrawal_path, class: 'btn btn-danger' %>
</div>
  <% end %>
</div>

