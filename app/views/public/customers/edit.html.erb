<h3>会員情報編集</h3>
  <%= form_with model: @customer_session_path do |f| %>

  <table>
    <td>名前　(<%= f.label :姓 %>)
    <%= f.text_field :last_name, autofocus: true, id:"inputName" %>

    (<%= f.label :名 %>)
    <%= f.text_field :first_name, autofocus: true, id:"inputName" %></td>
  </table>

  <table>
    <td>フリガナ　(<%= f.label :セイ %>)
    <%= f.text_field :last_name_kana, autofocus: true, id:"inputName" %>

    (<%= f.label :メイ %>)
    <%= f.text_field :first_name_kana, autofocus: true, id:"inputName" %></td>
  
  </table>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>（ハイフンなし）
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, size: "50x10" %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>（ハイフンなし）
    <%= f.text_field :telephone_number, autofocus: true, id:"inputName" %>
  </div>
  
  <%= f.submit "編集内容を保存", class: 'btn btn-success' %>

  <% end %>
  
  <%= link_to "退会する", public_customers_withdrawal_path, class: 'btn btn-danger' %>
  
  