<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/cc96e0b592.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
          <h1 >Nagano Cake</h1>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if customer_signed_in? %>
                 
                  <%= link_to "マイページ", public_customers_mypage_path, class: 'nav-link text-light' %>
  
                  <%= link_to "商品一覧", public_items_path, class: 'nav-link text-light' %>
  
                  <%= link_to "カート", public_cart_items_path, class: 'nav-link text-light' %>
  
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-light' %>
                    
                <% elsif admin_signed_in? %>

                  <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-light' %>

                  <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-light' %>

                  <%= link_to "注文履歴一覧", top_path, class: 'nav-link text-light' %>

                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-light' %>

                <% else %>

                  <%= link_to "About", about_path, class: 'nav-link text-light'%>

                  <%= link_to "商品一覧", public_items_path, class: 'nav-link text-light' %>

                  <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-light' %>

                  <%= link_to  "ログイン", new_customer_session_path, class: 'nav-link text-light' %>

                <% end %>
              </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
  </body>


  <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">CopyRight Infratop.inc
          </div>
        </div>
      </div>
    </footer>
</html>
