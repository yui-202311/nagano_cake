<div class="container">
  <h4>【注文履歴詳細】</h4>

    <table>
      <tr>
        <th>購入者</th>
        <td>
          <%= link_to admin_customer_path(@customer) do %>
            <%= @customer.last_name %><%= @customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>〒<%= @order.customer.postal_code %> <%= @order.customer.address %><br>
              <%= @order.customer.last_name %><%= @order.customer.first_name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><%= %></td>
      </tr>
    </table>
    
  <div class="row">
    <div class="col-md-8">
      <table border="1" style="width:100%">
        <thead>
          <tr>
            <td class="table-secondary" style="width:45%">商品名</td>
            <td class="table-secondary" style="width:20%">単価(税込)</td>
            <td class="table-secondary" style="width:5%">数量</td>
            <td class="table-secondary" style="width:10%">小計</td>
            <td class="table-secondary" style="width:20%">製作ステータス</td>
          </tr>
        </thead>
  
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  
    <div class="col-md-4">
      <table style="width:80%">
        <% @total += @order.payment_amount %>
        <tr>
          <th style="width:40%">商品合計</th>
          <td style="width:40%"><%= @total.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
              <% @order.postage = 800 %>
          <td><%= @order.postage %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
              <% total_payment = @order.postage + @total %>
          <th><%= total_payment.to_s(:delimited) %>円</th>
        </tr>
      </table>
    </div>
  </div>
</div>