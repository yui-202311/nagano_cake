<div class="container">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの注文履歴</h4>

  <table class="table">
    <thead>
      <tr class="table-secondary">
        <th>購入日時</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
  
    <tbody>
      <tr>
        <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= @order.order_details.sum(:amount) %></td>
        <td><%#= current_customer %></td>
      </tr>
    </tbody>
  </table>
</div>