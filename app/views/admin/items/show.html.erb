<div class="container mt-2">
  <h3>【商品詳細】</h3>
  <div class="row">
    <div class="col-md-4">
      <% if @item.image.attached? %>
        <div>
          <%= image_tag @item.image, size: "250x200" %>
        </div>
      <% else %>
        <div>
          <%= image_tag 'no_image', size: "250x200" %>
        </div>
      <% end %>
    </div>

    <div class="col-md-8">
      <h4 class="font-weight-bold"><%= @item.name %></h4>
      <h5><%= @item.introduction %></h5>
      <h5>
        ¥<%= (@item.price*1.1).floor.to_s(:delimited) %>
        (¥<%= @item.price.to_s(:delimited) %>)
      </h5>
      <h5>
        <% if @item.is_active %>
          <div class="text-success">販売中</div>
        <% else %>
          <div class="text-secondary">販売停止中</div>
        <% end %>
      </h5>

      <div class="mt-3">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>