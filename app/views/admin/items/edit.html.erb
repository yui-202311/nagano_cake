<div class="container mt-2">
  <h3>【商品編集】</h3>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <table>
      <tr style="width:80%">
        <th style="width:20%">商品画像</th>
        <td style="width:60%"><%= f.file_field :image, accept: "image*/" %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name, size: "32x10" %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction, size: "34x7" %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price, size: "32x10" %> 円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
        </td>
  </table>

  <div class="mt-3">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
<% end %>
</div>


