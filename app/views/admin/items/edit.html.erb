<div class="container">
  <h3>【商品編集】</h3>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <table>
    <tbody>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image*/" %></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
        <th colspan="2"></th>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :introduction, size: "30x10" %></td>
        <th colspan="2"></th>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :price, placeholder: "1000" %>円</td>
      </tr>
    </tbody>
  </table>
  <%= f.submit '変更を保存', class: 'btn btn-success' %>
<% end %>
</div>
  
  
  